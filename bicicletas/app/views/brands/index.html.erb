  <tbody id="marcas">
    <% @brands.each do |brand| %>
    <div id="general">

      <div id="contenedor">

          <div id="image"><%= link_to image_tag(brand.logo.url(:thumb)), :controller => "bikes" , :id => brand.id%></div>
          <div id="name"><%= brand.name %></div>
          <div id="history"><%= brand.history %></div>
          <div id="localitation"><%= brand.localizacion %></div>
      </div>

      <div id="confirm">
            <%= link_to 'Show', brand %>
          <% if !current_user.nil? %>
            <%= link_to 'Edit', edit_brand_path(brand) %>
            <%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
      </div>

    </div>
    <% end %>
  </tbody>



<br>
<% if !current_user.nil? %>
<%= link_to 'New Brand', new_brand_path %>
<%= will_paginate @bikes %>
<% end %>

