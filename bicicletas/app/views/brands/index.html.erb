<h1>Listing brands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>History</th>
      <th>Localizacion</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= image_tag brand.logo.url(:thumb) %></td>
        <td><%= brand.name %></td>
        <td><%= brand.history %></td>
        <td><%= brand.localizacion %></td>

        <td><%= link_to 'Show', brand %></td>
        <% if !current_user.nil? %>
        <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if !current_user.nil? %>
<%= link_to 'New Brand', new_brand_path %>
<% end %>